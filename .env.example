# =============================================================================
# BBoS (Balochistan Statistics Navigator) - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
NODE_ENV=development
# Options: development, production

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=5000
# The port your application will listen on
# Default: 5000
# Digital Ocean/Production: Use any available port (3000, 8080, 5001, etc.)

HOST=0.0.0.0
# The host/interface to bind to
# 0.0.0.0 = all interfaces (recommended for production)
# 127.0.0.1 = localhost only (for local development)

SERVER_TIMEOUT=60000
# Server timeout in milliseconds
# Default: 60000 (60 seconds)

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Use ONE of the following (REMOTE_DATABASE_URL takes precedence):

# For external/remote PostgreSQL (Aiven, AWS RDS, Azure, etc.)
REMOTE_DATABASE_URL=postgresql://username:password@host:port/database
# Example: postgresql://avnadmin:password@pg-xxx.aivencloud.com:14517/bbos

# For local PostgreSQL or Replit database
DATABASE_URL=postgresql://username:password@localhost:5432/bbos

# Database SSL Configuration
# DEFAULT: SSL is enabled by default for remote databases (secure by default)
# SSL is disabled by default for localhost connections
#
# Uncomment and set DB_SSL=false ONLY if you need to disable SSL for a remote database
# DB_SSL=false
#
# For strict SSL verification (valid certificates only):
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=true
#
# For cloud databases with self-signed certs (Aiven, some RDS configs):
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=false

DB_SSL_CA_PATH=
# Path to custom CA certificate file (optional)
# Example: /path/to/ca-certificate.crt
# Leave empty if not needed

# Database Connection Pool Settings
DB_POOL_MAX=20
# Maximum number of database connections in the pool

DB_IDLE_TIMEOUT=30000
# Idle connection timeout in milliseconds

DB_CONNECTION_TIMEOUT=10000
# Connection timeout in milliseconds

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
SESSION_SECRET=your-super-secret-random-string-minimum-32-characters
# IMPORTANT: Generate a strong random string for production!
# Generate one using: openssl rand -base64 32

SESSION_TABLE_NAME=session
# Database table name for storing sessions
# Default: session

SESSION_TTL=86400
# Session time-to-live in seconds
# Default: 86400 (24 hours)
# 3600 = 1 hour, 604800 = 7 days

SESSION_COOKIE_NAME=connect.sid
# Session cookie name
# Default: connect.sid

SESSION_COOKIE_DOMAIN=
# Session cookie domain (optional)
# Example: .yourdomain.com
# Leave empty for same-domain only

# -----------------------------------------------------------------------------
# Reverse Proxy Configuration
# -----------------------------------------------------------------------------
TRUST_PROXY=true
# Set to 'true' if behind nginx, Apache, or load balancer
# This enables Express to trust X-Forwarded-* headers
# IMPORTANT: Set to 'true' in production behind reverse proxy

# -----------------------------------------------------------------------------
# Application URL
# -----------------------------------------------------------------------------
APP_URL=http://localhost:5000
# Your application's public URL
# Development: http://localhost:5000
# Production examples:
#   https://bbos.cerbm.com
#   https://your-domain.com

# -----------------------------------------------------------------------------
# Logging (Optional - for future enhancements)
# -----------------------------------------------------------------------------
LOG_LEVEL=info
# Options: error, warn, info, debug
# Default: info

LOG_FORMAT=json
# Options: json, text
# json = structured logging (recommended for production)
# text = human-readable (good for development)
